using System;

namespace DivsionCalculator
{
	class MainClass
	{
		public static void Main (string[] args)
		{
			int num1;
			int num2;

			Console.Write ("Choose a number between 1and 10: ");
			num1 = Convert.ToInt32(Console.ReadLine());
			Console.Write ("Choose another mumber between 1 and 10: ");
			num2 = Convert.ToInt32(Console.ReadLine());
			Console.WriteLine ("if I divide " + num1 + " by" + num2 + " I get " + num1/num2);
			Console.ReadKey();
		}
	}
}
